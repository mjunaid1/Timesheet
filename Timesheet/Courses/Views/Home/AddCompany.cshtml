
@{
    ViewBag.Title = "AddCompany";
    Layout = "~/Views/Shared/Timesheet_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <section class="content-header sty-one">
        <h1>Add Company</h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index">Home</a></li>
            <li><i class="fa fa-angle-right"></i> Add Company</li>
        </ol>
    </section>


    <div class="row">
        <div class="col-12">

            <form id="myform">

                <div class="form-row">

                    <div class="col-lg-3">

                        <fieldset class="form-group">
                            <label>Company Name</label>
                            <input type="text" ng-model="CompanyName" class="form-control" placeholder="Company name">
                        </fieldset>

                    </div>

                    <button type="submit" ng-click="AddCompany()" class="btn btn-outline-primary">SUBMIT</button>

                </div>
            </form>

            <br />

            <div class="alert alert-success alert-block" ng-show="isSuccess">

                <h6 class="alert-heading">{{successMessage}}</h6>
            </div>
            <div class="alert alert-danger alert-block" ng-show="isError">
                <h6 class="alert-heading">{{errormessage}}</h6>
            </div>



            <!-- Example DataTables Card-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table "></i><span style="color:#000000; font-weight:bold;"> Companies </span> Table
                </div>
                <div class="card-body">
                    <div class="table-responsive table-sm">
                        <table class="table table-bordered table-striped" cellspacing="0">
                            <thead class="bg-blue-gradient text-white" style="font-weight:normal">
                                <tr>
                                    <th>COMPANY NAME</th>


                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="x in Obj_getCompany">


                                    <td>{{x.CompanyName}}</td>


                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>



