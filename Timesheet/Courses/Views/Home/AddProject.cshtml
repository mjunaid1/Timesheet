
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/Timesheet_Layout.cshtml";
}


    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <section class="content-header sty-one">
            <h1>Dashboard</h1>
            <ol class="breadcrumb">
                <li><a href="/Home/Index">Home</a></li>
                <li><i class="fa fa-angle-right"></i> Add Project</li>
            </ol>
        </section>
        
        
      


        <div class="row">
            <div class="col-12">
                <h1 style="color:rgb(53, 53, 53); font-weight:bold;">Add Project</h1>

                <form id="myform">
                   
                    <div class="form-row">
                        <div class="form-group col-3">
                            <label>Project Name</label>
                            <input type="text" ng-model="ProjectName" class="form-control" placeholder="Project Name" >
                        </div>
                     

                        <div class="form-group col-6">
                            <label> Company Name </label>

                            <select id="selectedCompany" ng-model="selectedCompany" class="form-control">



                                <option ng-repeat="x in Obj_getCompany" value="{{x.CompanyId}}">{{x.CompanyName}}</option>


                            </select>
                        </div>


                        </div>

                    <button type="submit" ng-click="AddProject()"  class="btn btn-outline-primary">SUBMIT</button>
                </form>
                <br />
                <div class="alert alert-success alert-block" ng-show="isSuccess">
                  
                    <h6 class="alert-heading">{{successMessage}}</h6>
                </div>
                <div class="alert alert-danger alert-block" ng-show="isError">
                    <h6 class="alert-heading">{{errormessage}}</h6>
                </div>


                <!-- Example DataTables Card-->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fa fa-table "></i><span style="color:#000000; font-weight:bold;"> Add </span> Project
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-sm ">
                            <table class="table table-striped table-bordered" cellspacing="0">
                                <thead class="table-info">
                                    <tr>
                                        <th style="color:#000000;">PROJECT NAME</th>
                                        <th style="color:#000000;">COMPANY NAME</th>
                                        <th style="color:#000000;">DATE</th>
                                      


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="x in Obj_getProjects">

                                       
                                        <td>{{x.ProjectName}}</td>
                                        <td>{{x.CompanyName}}</td>
                                        <td>{{x.Created | date:'MM/dd/yyyy'}}</td>
                                      

                                    </tr>
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

